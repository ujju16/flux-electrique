// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// Blog posts model
model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  excerpt   String
  content   String   @db.Text // Support du Markdown/MDX
  category  Category @default(ELECTRONIC)
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([published])
}

/// Blog post categories
enum Category {
  ELECTRONIC
  SOFTWARE
  DEVSECOPS
}

/// Contact form submissions (optional - for tracking)
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String   @db.Text
  createdAt DateTime @default(now())

  @@index([createdAt])
}

/// Contact and quote requests
model ContactRequest {
  id          String        @id @default(cuid())
  type        ServiceType   @default(OTHER) // Hardware, Software, ou Autre
  designation String        // Ex: "MacBook Pro M1 - Écran noir" ou "Site E-commerce Next.js"
  
  // Infos Client
  name        String
  email       String
  phone       String?
  company     String?
  
  // Détails
  message     String        @db.Text
  budget      BudgetRange   @default(UNKNOWN)
  
  // Meta
  status      RequestStatus @default(NEW)
  ipAddress   String?       // Pour la sécurité/rate limiting
  createdAt   DateTime      @default(now())

  @@index([createdAt])
  @@index([status])
  @@index([type])
}

enum ServiceType {
  HARDWARE_REPAIR
  SOFTWARE_DEV
  DEVSECOPS_CONSULTING
  OTHER
}

enum BudgetRange {
  UNKNOWN
  LESS_THAN_500
  FROM_500_TO_2K
  FROM_2K_TO_10K
  MORE_THAN_10K
}

enum RequestStatus {
  NEW
  CONTACTED
  QUOTED
  CONVERTED
  ARCHIVED
}
